// nextflow.config

params {
    datasets    = "${baseDir}/data/processed/*.csv" 
    splitters   = "${baseDir}/components/01_splitters/*.py"
    featurizers = "${baseDir}/components/02_featurizers/*.py"
    models      = "${baseDir}/components/03_models/*.py"
    evaluators  = "${baseDir}/components/04_evaluators/metrics.py"

    smiles_col   = "standardized_smiles"
    activity_col = "antimicrobial_activity"
    random_state = 333

    outdir = "${baseDir}/results"
}

env {
    PYTHONPATH = "${baseDir}"
}

process {
    maxForks = 4
}